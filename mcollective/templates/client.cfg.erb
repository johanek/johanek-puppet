# File managed by Puppet

topicprefix = /topic/
main_collective = mcollective
collectives = mcollective
libdir = /usr/libexec/mcollective
logfile = /var/log/mcollective.log
loglevel = info

# Plugins - PSK active # TODO Manage alternatives
securityprovider = psk
plugin.psk = <%= scope.lookupvar('mcollective::params::psk') %>

# Plugins - STOMP active # TODO Manage alternatives
connector = stomp
plugin.stomp.host = <%= scope.lookupvar('mcollective::stomp_host') %>
plugin.stomp.port = <%= scope.lookupvar('mcollective::stomp_port') %>
plugin.stomp.user = <%= scope.lookupvar('mcollective::stomp_user') %>
plugin.stomp.password = <%= scope.lookupvar('mcollective::stomp_password') %>

# Facts
factsource = <%= scope.lookupvar('mcollective::params::factsource') %>
